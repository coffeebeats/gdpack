{
  /* ----------------------------- Settings: Debug ---------------------------- */

  "debug.allowBreakpointsEverywhere": true,

  /* ------------------------------ Settings: Git ----------------------------- */

  "git.branchProtection": ["main"],

  /* ------------------------ Extensions: markdownlint ------------------------ */

  "markdownlint.config": {
    "MD024": {
      "siblings_only": true
    }
  },

  /* ------------------------ Extensions: rust-analyzer ----------------------- */

  "rust-analyzer.imports.granularity.enforce": true,
  "rust-analyzer.imports.granularity.group": "item"
}
